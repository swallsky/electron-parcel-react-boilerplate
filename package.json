{
  "name": "parceldemo",
  "version": "0.0.1",
  "description": "electron parcel demo",
  "keywords": [],
  "author": "jackXu",
  "license": "ISC",
  "main": "dist/app/app.js",
  "targets": {
    "web": {
      "source": [
        "src/web/index.html"
      ],
      "publicUrl": "./",
      "sourceMap": false
    },
    "app": {
      "source": [
        "src/app/app.js",
        "src/app/utils/dir.js"
      ],
      "context": "electron-main",
      "sourceMap": false
    },
    "app-preload": {
      "source": [
        "src/app/preload/main.js"
      ],
      "context": "electron-renderer",
      "distDir": "dist/app/preload",
      "sourceMap": false
    }
  },
  "scripts": {
    "start": "parcel watch",
    "build": "rm -rf dist && parcel build",
    "dev": "NODE_ENV=dev electron dist/app/app.js",
    "app:dev": "concurrently \"yarn start\" \"wait-on dist/app/app.js\" \"yarn dev\"",
    "pack:mac": "yarn build && electron-builder build --mac",
    "pack:win": "yarn build && electron-builder build --win"
  },
  "devDependencies": {
    "concurrently": "^7.2.2",
    "electron": "18.3.0",
    "electron-builder": "^23.1.0",
    "parcel": "^2.6.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.2.2",
    "wait-on": "^6.0.1"
  },
  "build": {
    "appId": "com.electron.parcel",
    "productName": "parcel-demo",
    "asar": true,
    "files": [
      "dist/*",
      "dist/**/*",
      "assets/*",
      "assets/**/*"
    ],
    "extends": null,
    "extraFiles": [],
    "directories": {
      "buildResources": "static",
      "output": "release"
    },
    "copyright": "Copyright @ 2022 jackXu",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "./assets/logo/logo.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "./assets/logo/logo.icns"
    }
  },
  "browserslist": "> 0.5%, last 2 versions, not dead"
}
