{
  "name": "parceldemo",
  "version": "0.0.1",
  "description": "electron parcel demo",
  "keywords": [],
  "author": "jackXu",
  "license": "ISC",
  "main": "app.js",
  "targets": {
    "main": {
      "source": "src/app/app.js",
      "context": "electron-main"
    },
    "preload": {
      "source": [
        "src/web/preload/main.js"
      ],
      "context": "electron-renderer",
      "distDir": "dist/web/preload"
    },
    "web": {
      "source": "src/web/index.html",
      "context": "browser",
      "publicUrl": "./"
    }
  },
  "scripts": {
    "app:dev": "concurrently \"yarn web\" \"yarn app\" \"wait-on app.js dist/web/index.html\" \"nodemon --watch src/app --exec 'yarn dev'\"",
    "web": "parcel watch --target web --target preload --no-source-maps",
    "app": "parcel watch --target main --no-source-maps --no-hmr",
    "dev": "NODE_ENV=dev electron .",
    "build": "rm -rf dist && parcel build --no-source-maps --no-scope-hoist",
    "pack:mac": "yarn build && electron-builder build --mac",
    "pack:win": "yarn build && electron-builder build --win"
  },
  "dependencies": {
    "sqlite3": "^5.0.8"
  },
  "devDependencies": {
    "@ant-design/icons": "^4.7.0",
    "antd": "^4.21.3",
    "concurrently": "^7.2.2",
    "electron": "18.3.4",
    "electron-builder": "^23.1.0",
    "nodemon": "^2.0.16",
    "parcel": "^2.6.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.2.2",
    "wait-on": "^6.0.1"
  },
  "build": {
    "appId": "com.electron.parcel",
    "productName": "parcel-demo",
    "asar": true,
    "files": [
      "app.js",
      "dist/*",
      "dist/**/*",
      "assets/*",
      "assets/**/*"
    ],
    "extends": null,
    "extraFiles": [],
    "directories": {
      "buildResources": "static",
      "output": "release"
    },
    "copyright": "Copyright @ 2022 jackXu",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "./assets/logo/logo.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "./assets/logo/logo.icns"
    }
  }
}
